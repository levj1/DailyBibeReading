@model IEnumerable<DBReading.Models.Reader>
@using System.Linq
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (!Model.Any())
{
    <text>There is no user yet.</text>
}else
{
    <table class="table-striped">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Midle Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.MiddleName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
